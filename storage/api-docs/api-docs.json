        "/files/upload": {
            "post": {
                "tags": [
                    "File"
                ],
                "summary": "新增檔案，只支援 jpeg,png,jpg,pdf,ico 格式，最大 2 m",
                "operationId": "bb8cb95774afc435fb47178dcb299c39",
                "requestBody": {
                    "description": "上傳檔案",
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "required": [
                                    "file"
                                ],
                                "properties": {
                                    "file": {
                                        "description": "檔案",
                                        "type": "string",
                                        "format": "binary"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "回傳格式解析",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "suffix": {
                                            "description": "檔案完整的 後綴路徑",
                                            "type": "integer"
                                        },
                                        "prefix": {
                                            "description": "檔案完整的 前綴路徑",
                                            "type": "string"
                                        },
                                        "filename": {
                                            "description": "檔案名稱",
                                            "type": "string"
                                        },
                                        "full_path": {
                                            "description": "檔案完整路徑",
                                            "type": "string"
                                        }
                                    },
                                    "type": "object",
                                    "example": {
                                        "suffix": "uploads/20220301/sample-621d87bde24f8.png",
                                        "prefix": "http://example-app.test/storage/",
                                        "filename": "sample-621d87bde24f8.png",
                                        "full_path": "http://example-app.test/storage/uploads/20220301/sample-621d87bde24f8.png"
                                    }
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "AdminModel": {
                "title": "AdminModel",
                "required": [
                    "name",
                    "photoUrls"
                ],
                "properties": {
                    "account": {
                        "type": "string",
                        "format": "string",
                        "example": "account"
                    },
                    "email": {
                        "type": "string",
                        "format": "string",
                        "example": "xxxx@gamil.com"
                    },
                    "password": {
                        "description": "默認是驗證格式是 `數字` + `大寫英文` + `小寫英文` + `開頭是否是英文` + `下底線` + `橫線`",
                        "type": "string",
                        "format": "string",
                        "example": "password111"
                    },
                    "password_confirmation": {
                        "type": "string",
                        "format": "string",
                        "example": "password111"
                    },
                    "display_name": {
                        "type": "string",
                        "format": "string",
                        "example": "小虎"
                    },
                    "status": {
                        "description": "狀態，可能會有 0 ~ 127",
                        "type": "string",
                        "format": "integer",
                        "example": "0"
                    },
                    "role_id": {
                        "type": "string",
                        "format": "integer",
                        "example": "1"
                    }
                },
                "type": "object",
                "xml": {
                    "name": "AdminModel"
                }
            },
            "PermissionModel": {
                "description": "PermissionModel 物件",
                "properties": {
                    "name": {
                        "type": "string",
                        "format": "string",
                        "example": "permission_name"
                    }
                },
                "type": "object",
                "xml": {
                    "name": "PermissionModel"
                }
            },
            "BannerModel": {
                "description": "BannerModel 物件",
                "properties": {
                    "title": {
                        "type": "string",
                        "format": "string",
                        "example": "name"
                    },
                    "status": {
                        "type": "string",
                        "format": "integer",
                        "example": "status"
                    },
                    "path": {
                        "description": "請先透過 file 擋下的 upload 那隻 api 將檔案上傳，並拿到 suffix，再將 suffix 傳到這隻 banner",
                        "type": "string",
                        "format": "string",
                        "example": "檔案 path"
                    }
                },
                "type": "object",
                "xml": {
                    "name": "BannerModel"
                }
            },
            "FileObject": {
                "description": "File 物件",
                "xml": {
                    "name": "FileObject"
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "description": "Login with email and password to get the authentication token",
                "name": "Authorization",
                "in": "header",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "security": [
        []
    ]
}