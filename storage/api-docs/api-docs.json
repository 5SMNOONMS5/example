    "components": {
        "schemas": {
            "AdminModel": {
                "title": "AdminModel",
                "required": [
                    "name",
                    "photoUrls"
                ],
                "properties": {
                    "account": {
                        "type": "string",
                        "format": "string",
                        "example": "account"
                    },
                    "email": {
                        "type": "string",
                        "format": "string",
                        "example": "xxxx@gamil.com"
                    },
                    "password": {
                        "description": "默認是驗證格式是 `數字` + `大寫英文` + `小寫英文` + `開頭是否是英文` + `下底線` + `橫線`",
                        "type": "string",
                        "format": "string",
                        "example": "password111"
                    },
                    "password_confirmation": {
                        "type": "string",
                        "format": "string",
                        "example": "password111"
                    },
                    "display_name": {
                        "type": "string",
                        "format": "string",
                        "example": "小虎"
                    },
                    "role_id": {
                        "type": "string",
                        "format": "integer",
                        "example": "1"
                    }
